root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,css,scss,less,json,yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.txt]
end_of_line = crlf

[*.bat]
end_of_line = crlf

[*.{htm,html}]
indent_size = 2

[Makefile]
indent_style = tab 